<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Menu</title>
  <style media="screen">
    li{
      list-style-type: none;
    }
  </style>
</head>
<body>
  <h1>Restaurant Menu</h1>

  <h2>Appetizers</h2>
  <% menu.forEach(function (menuItem) {%>
    <% if (menuItem.type === 'Appetizer') { %>
      <li><%= menuItem.name %> <%= menuItem.description %> $<%= menuItem.price %></li>
    <% } %>
  <% }) %>

  <h2>Entrees</h2>
  <% menu.forEach(function (menuItem) {%>
    <% if (menuItem.type === 'Entree') { %>
      <li><%= menuItem.name %> <%= menuItem.description %> $<%= menuItem.price %></li>
    <% } %>
  <% }) %>
  <h2>Desserts</h2>
  <% menu.forEach(function (menuItem) {%>
    <% if (menuItem.type === 'Dessert') { %>
      <li><%= menuItem.name %> <%= menuItem.description %> $<%= menuItem.price %></li>
    <% } %>
  <% }) %>
  <h2>Misc</h2>
  <% menu.forEach(function (menuItem) {%>
    <% if (menuItem.type === 'Other') { %>
      <li><%= menuItem.name %> <%= menuItem.description %> $<%= menuItem.price %></li>
    <% } %>
  <% }) %>
</body>
</html>
