<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <title>Menu Edit</title>
    <style>
      li{
        list-style-type: none;
      }
      input{
        margin-right: 5px;
      }
    </style>
    <script src="/scripts/jquery.js"></script>
  </head>
  <body>

    <form action="" method="POST" class="pure-form pure-form-aligned">
    <fieldset>
        <legend><h2 class="content-head is-center">Menu Edit:</h2></legend>
        <ul>
          <li>
            <div class="pure-control-group">
              <input name="menu[0][name]" type="text" placeholder="Name"><input name="menu[0][description]" type="text" placeholder="Description"><input name="menu[0][price]" type="number" placeholder="Price"><select name="menu[0][type]" class="type">
                <option value="Appetizer">Appetizer</option>
                <option value="Entree">Entree</option>
                <option value="Dessert">Dessert</option>
                <option value="Other">Other</option>
              </select>
            </div>
          </li>
        </ul>
        <button id='addRow' class="pure-button pure-button-secondary">Add items</button>

        <button type="submit" class="pure-button pure-button-primary">Done</button>
    </fieldset>
    </form>
    <script src='/scripts/menu_edit.js' type='text/javascript'>
    </script>
  </body>
</html>
